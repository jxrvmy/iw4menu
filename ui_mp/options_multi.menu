		// pointless as of now
		CHOICE_DVARYESNO( 20, "@MENU_SHOW_BLOOD", "cg_blood", ; )
		CHOICE_DVARFLOATLIST( 21, "@MENU_ENABLE_CONSOLE", monkeytoy, ENABLE_CONSOLE_STRLIST, ; )
		CHOICE_DVARYESNO( 22, "@MENU_ENABLE_CROSSHAIR", "cg_drawCrosshair", ; )
